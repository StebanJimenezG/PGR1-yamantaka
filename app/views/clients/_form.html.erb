<%= form_for(@client) do |f| %>
<% if @client.errors.any? %>
<h2>Has cometido un error los siguientes errores te muestran porque no se ha podido crear</h2>
<ul>
 <% @client.errors.full_messages.each do |msg| %>
 <li><%= msg%></li>
 <%end %>
</ul>
<% end%>

    <br><div>
      <h1><%= name %> Cliente</h1><br>
    </div>
    <% @client.errors.full_messages.each do |message| %>
        <div>
          * <%= message %>
        </div>
    <% end %>
    <div>
      <%= f.select :tipo_documento, ['C.C', 'T.I', 'C.E'], :prompt => 'Tipo de documento'  %>
      <%= f.text_field :documento, placeholder: "Documento"  %>

    </div><br>

    <div>
      <%= f.text_field :nombre, placeholder: "Nombre"  %>
      <%= f.text_field :apellido, placeholder: "Apellido"  %>

    </div><br>

    <div>
      <%= f.text_field :telefono, placeholder: "Teléfono"  %>
      <%= f.text_field :direccion, placeholder: "Dirección"  %>
    </div><br>

    <div>
      <%= f.select :pais, ['Colombia'], :prompt => 'País'  %>
      <%= f.select :ciudad, ['Armenia','Barranquilla', 'Bogota','Medellin','Cartagena', 'Cali'], :prompt => 'Ciudad'  %>
    </div><br>
    <div>
      <%= f.text_field :email, placeholder: "Email"  %>
    </div><br>
    <div>

      <%= f.submit "Guardar" %>
    </div>

<% end %>